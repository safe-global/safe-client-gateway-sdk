{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": ["src"]
}
